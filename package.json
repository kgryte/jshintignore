{
  "name": "@kgryte/jshintignore",
  "version": "1.0.1",
  "description": "Creates a .jshintignore file.",
  "author": {
    "name": "Athan Reines",
    "email": "kgryte@gmail.com"
  },
  "contributors": [
    {
      "name": "Athan Reines",
      "email": "kgryte@gmail.com"
    }
  ],
  "bin": {
    "jshintignore": "./bin/cli"
  },
  "scripts": {
    "test": "mocha",
    "test-cov": "istanbul cover ./node_modules/.bin/_mocha --dir ./reports/coverage -- -R spec",
    "codecov": "istanbul cover ./node_modules/.bin/_mocha --dir ./reports/codecov/coverage --report lcovonly -- -R spec && cat ./reports/codecov/coverage/lcov.info | codecov && rm -rf ./reports/codecov"
  },
  "main": "./lib",
  "repository": {
    "type": "git",
    "url": "git://github.com/kgryte/jshintignore.git"
  },
  "keywords": [
    "utilities",
    "utils",
    "utility",
    "jshintignore",
    "dotfile",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/kgryte/jshintignore/issues"
  },
  "dependencies": {
    "@kgryte/noop": "^1.0.0",
    "minimist": "^1.1.2",
    "pkginfo": "^0.3.0",
    "validate.io-contains": "^1.0.0",
    "validate.io-function": "^1.0.2",
    "validate.io-object": "^1.0.4",
    "validate.io-string-primitive": "^1.0.0"
  },
  "devDependencies": {
    "chai": "3.x.x",
    "codecov.io": "^0.1.5",
    "istanbul": "^0.3.0",
    "jshint": "2.x.x",
    "jshint-stylish": "2.x.x",
    "mkdirp": "^0.5.1",
    "mocha": "2.x.x"
  },
  "license": "MIT"
}
